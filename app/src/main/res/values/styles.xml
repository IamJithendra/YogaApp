<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Day Theme -->
    <style name="CustomDay" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomDayDark" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Week Theme -->
    <style name="CustomWeek" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomWeekDark" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Calendar -->

    <attr name="customCalendarStyle" format="reference" />

    <style name="TitleStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CustomCalendar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="customCalendarStyle">@style/TitleStyle</item>
        <item name="android:textStyle">bold</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">#FF6750A4</item>
        <item name="colorControlHighlight">#FF6750A4</item>
        <item name="android:textColor">@drawable/date_selector</item>
    </style>

    <style name="CustomCalendarDark" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="customCalendarStyle">@style/TitleStyle</item>
        <item name="android:textStyle">bold</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#FF6750A4</item>
        <item name="colorControlHighlight">#FF6750A4</item>
        <item name="android:textColor">@drawable/date_selector</item>
    </style>
</resources>